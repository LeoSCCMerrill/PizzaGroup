@model User
@{
    ViewBag.Title = "Create new employee";
}

<h1>Create a New Employee Account</h1>
<div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="AddEmployee">
    <div class="form-group row">
        <div class="col-sm-2"><label>Email:</label></div>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input asp-for="PasswordHash" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><button type="submit" class="btn btn-primary">Create Employee</button></div>
    </div>
</form>