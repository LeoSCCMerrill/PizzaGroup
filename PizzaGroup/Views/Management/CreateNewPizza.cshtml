@model Pizza


<div id="grad">
<h1>Pizza Creation Station</h1>
<h3>Fill out the form below to create a new custom pie for our customers.</h3>
<label>Name of Pizza:</label>
<input asp-for="PizzaName"/>
<br />
<br />

<div class="row">
	<div class="column">
<h3>Meats</h3>
<br />
<input type="checkbox" name="pepperoni" value="pepperoni">
<label for="pepperoni">Pepperoni</label>

<input type="checkbox" name="sausage" value="sausage">
<label for="sausage">Sausage</label>

<input type="checkbox" name="hamburger" value="hamburger">
<label for="hamburger">Hamburger</label>

<br />

<input type="checkbox" name="canadianBacon" value="canadianBacon">
<label for="canadianBacon">Canadian Bacon</label>


<input type="checkbox" name="chicken" value="chicken">
<label for="chicken">Chicken</label>

<input type="checkbox" name="bacon" value="bacon">
<label for="bacon">Bacon</label>

<br />

<input type="checkbox" name="anchovies" value="anchovies">
<label for="anchovies">Anchovies</label>

<input type="checkbox" name="proccuito" value="proccuito">
<label for="proccuito">Proccuito</label>
<br>
<br />
<h3>Veggies</h3>
<br />
<input type="checkbox" name="tomatoes" value="tomatoes">
<label for="tomatoes">Tomatoes</label>

<input type="checkbox" name="olives" value="olives">
<label for="olives">Olives</label>

<input type="checkbox" name="bellPepper" value="bellPepper">
<label for="bellPepper">Bell Pepper</label>

<input type="checkbox" name="porccini" value="porccini">
<label for="porccini">Porccini</label>

<input type="checkbox" name="onion" value="onion">
<label for="onion">Onion</label>

<input type="checkbox" name="mushroom" value="mushroom">
<label for="mushroom">Mushroom</label>

<input type="checkbox" name="jalapeno" value="jalapeno">
<label for="jalapeno">Jalapeno</label>

<input type="checkbox" name="chives" value="chives">
<label for="chives">Chives</label>
<br />
</div>


		<div class="column">
<h3>Sauce</h3>
<br />
<input type="checkbox" name="marinara" value="marinara">
<label for="marinara">Marinara</label>

<input type="checkbox" name="ranch" value="ranch">
<label for="ranch">Ranch</label>

<input type="checkbox" name="bbq" value="bbq">
<label for="bbq">Barbeque</label>

<br />

<input type="checkbox" name="garlic" value="garlic">
<label for="garlic">Garlic</label>

<input type="checkbox" name="alfredo" value="alfredo">
<label for="alfredo">Alfredo</label>
<br />
<br />
<h3>Cheese</h3>
<br />
<input type="checkbox" name="mozzerella" value="mozzerella">
<label for="mozzerella">Mozzerella</label>

<input type="checkbox" name="asiago" value="asiago">
<label for="asiago">Asiago</label>

<input type="checkbox" name="parmesean" value="parmesean">
<label for="parmesean">Parmesean</label>

<input type="checkbox" name="fontina" value="fontina">
<label for="fontina">Fontina</label>

<input type="checkbox" name="smokedGouda" value="smokedGouda">
<label for="smokedGouda">Smoked Gouda</label>

<input type="checkbox" name="government" value="government">
<label for="government">Government</label>
<br />
</div>

	<div class="column">
<h3>Crust</h3>
<br />
		<input type="radio" name="crust" value="classic">
<label for="classic">Classic</label>

		<input type="radio" name="crust" value="thin">
<label for="thin">Thin Crust</label>
<br />
		<input type="radio" name="crust" value="deepDish">
<label for="deepDish">Deep Dish</label>

		<input type="radio" name="crust" value="stuffed">
<label for="stuffed">Stuffed</label>
<br />
<br />

</div>
</div>

<label>Price: </label>
	<input type="text" asp-for="PizzaPrice" />
<br />
<br />

<button type="submit">Make That Pie!</button>
</div>