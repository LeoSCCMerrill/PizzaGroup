@model Order
@ViewBag.Orders

@if (Model.Pizzas.Count() != 0){
    <table style="border-width:1; border-color:"Black"; >
    <thead>
    <tr>
        <th>Pizza ID</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
        <form method="post">
            @foreach (var pizza in @Model.PizzaList)
            {
        <tr>
        <td>@pizza.Id</td>
        <td>@pizza.Price</td>
        <td><button asp-action="Delete" asp-route-pizza="@pizza">Delete</button></td>
        <br/>
        </tr>
            }
        </form>
    </tbody>
</table>

    <h3>Enter a Delivery Address</h3>
<form method="post" asp-controller="Order">
    <label for="address">Address: </label>
    <input type="text" name="address"/>
    <label for="zipcode">Zipcode: </label>
    <input type="text" name="zipcode"/>
</form>

    <form method="post" asp-action="SubmitOrder" asp-controller="Order">
    <button  class="btn btn-primary" value="SUBMIT">SUBMIT</button>
    </form>

}else{
<h1>Nothing is here</h1>
<form method="post">
    <button asp-action="CustomPizzaView" asp-controller="Customer" class="btn btn-primary">Buy A Pizza</button>
</form>
}