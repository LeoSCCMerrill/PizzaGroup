@model List<Pizza>

<h1>Browse all of our Classic Pizzas Here!</h1>
<body id="grad">

    <form asp-controller="Customer" asp-action="ListPizzas" method="post">
 <table id="customers">
    <thead>
    <tr>
        <th>Pizza</th>
        <th>Size</th>
        <th>Price</th>
        <th>Remove Pizza</th>
    </tr>
        </thead>
        <tbody>
        @foreach (var pizza in @Model)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Size.Name</td>
                <td>@pizza.Price</td>
                <td>
                    <form method="post" asp-action="DeletePizza" asp-controller="Customer">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>

                </td>
                <td>
                    <form method="post" asp-action="AddOrder" asp-controller="Order" asp-route-pizza="@Model">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
</table>
</form>
</body>
