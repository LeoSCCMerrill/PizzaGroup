@model List<Pizza>

<h1>Browse all of our Classic Pizzas Here!</h1>
<body id="grad">

    <table id="customers">
    <thead>
    <tr>
        <th>Pizza</th>
        <th>Size</th>
        <th>Price</th>
        <th>Add Pizza</th>
       
   @*  This will only show up if you are logged in as a manager *@
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Manager") || User.IsInRole("Owner")))
                    {
                        <th>Edit Pizza</th>
                        <th>Remove Pizza</th>
                    }
    </tr>
        </thead>
        <tbody>
        @foreach (var pizza in @Model)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Size.Name</td>
                <td>@pizza.Price.ToString("c")</td>
                <td>
                  
                </td>
                @if (User.Identity.IsAuthenticated && (User.IsInRole("Manager") || User.IsInRole("Owner") || pizza.UserId != null))
                {
                <td>
                                <a asp-controller="Management" asp-action="EditPizza" asp-route-id="@pizza.Id">
                       Edit Pizza
                    </a>
                </td>
                <td>
                    <form method="post" asp-action="DeletePizza" asp-controller="Customer">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </td>
                }
                <td>
            <form method="post" asp-action="AddOrder" asp-controller="Order" asp-route-pizzaId="@pizza.Id">
                <input type="submit" class="btn btn-primary" />
                </form>
                </td>
            </tr>
        }
        </tbody>
</table>

<a asp-action="CustomPizzaView" asp-controller="Customer" class="btn btn-primary">Create new Pizza!</a>
</body>
