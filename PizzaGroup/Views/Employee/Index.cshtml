@model IList<Order>

<link rel="stylesheet" href="~/css/site.css">

<body id="grad">
    <div class="center">
        <h2>Welcome to Hizza Pizza</h2>
    </div>
    @{ Decimal totalPrice = 0.0m; }
    @foreach(Order order in Model)
    {
        
            <div>
                @foreach (var pizza in order.PizzaList)
                {
                    <div>@pizza.Name</div>
                    <div>@pizza.Crust.Name</div>
                    @foreach (Topping topping in pizza.Toppings)
                    {
                        <div>@topping.Name</div>
                    }
                    <div>@pizza.Size.Name</div>
                    <div>@pizza.Price</div>
                    totalPrice += pizza.Price;
                    
                }
                <div>@order.OrderStatus</div>
                <div>@totalPrice</div>
            <form asp-controller="Employee" asp-action="Details" asp-route-id="@order.Id" method="get">
                <button type="submit">Details</button>
            </form>
            </div>
    }
</body>